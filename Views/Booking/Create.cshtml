@using Microsoft.AspNetCore.Mvc.Rendering

@model HospitalityProject.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h2>New Booking</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoomId"></label>
        <select asp-for="RoomId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Rooms, "RoomId", "RoomNumber"))">
            <option value="">-- Select Room --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CheckInDate"></label>
        <input asp-for="CheckInDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CheckOutDate"></label>
        <input asp-for="CheckOutDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TotalPrice"></label>
        <input asp-for="TotalPrice" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save Booking</button>
</form>

<a asp-action="Index">Back to List</a>
