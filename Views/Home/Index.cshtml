@{
    ViewData["Title"] = "Welcome to Our Hotel";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .video-background {
            position: relative;
            height: 100vh;
            overflow: hidden;
        }

            .video-background video {
                position: absolute;
                top: 50%;
                left: 50%;
                min-width: 100%;
                min-height: 100%;
                width: auto;
                height: auto;
                transform: translate(-50%, -50%);
                z-index: -2;
                filter: brightness(1);
            }


        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .hero-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 3;
            color: white;
            text-align: center;
        }

        .form-section {
            background-color: white;
            padding: 30px;
            margin-top: -80px;
            box-shadow: 0px -5px 20px rgba(0, 0, 0, 0.2);
            z-index: 4;
            position: relative;
        }

        footer {
            position: sticky;
            top: 100%;
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px;
        }

        .form-control:focus {
            box-shadow: none;
        }
    </style>
</head>
<body>

    <!-- Video Hero Section -->
    <div class="video-background">
        <video autoplay muted loop>
            <source src="/lib/index_video.mp4" type="video/mp4">
        </video>
        <div class="overlay"></div>
        <div class="hero-content">
            <h1 class="display-4 fw-bold">Discover Your Perfect Stay</h1>
            <p class="lead">Book your next vacation with ease and comfort</p>
        </div>
    </div>

    <!-- Booking Form Section -->
    <div class="container form-section">
        <h3 class="text-center mb-4">Start Your Booking</h3>
        <form class="row g-3 justify-content-center" asp-controller="Booking" asp-action="Create">
            <div class="col-md-4">
                <label for="checkInDate" class="form-label">Check-In Date</label>
                <input type="date" class="form-control" id="checkInDate" name="checkInDate" required />
            </div>
            <div class="col-md-4">
                <label for="checkOutDate" class="form-label">Check-Out Date</label>
                <input type="date" class="form-control" id="checkOutDate" name="checkOutDate" required />
            </div>
            <div class="col-12 text-center">
                <a href="/Booking/Create" class="btn btn-primary btn-lg mt-3">Book Now</a>
            </div>
        </form>
    </div>

    <!-- Sticky Footer -->
    <footer>
        <p>&copy; @DateTime.Now.Year Hotel Booking Project | Built with ❤️ in by Alex</p>
    </footer>

</body>
</html>
