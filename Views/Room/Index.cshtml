@model IEnumerable<HospitalityProject.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<h2>Rooms</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Capacity</th>
            <th>Price Per Night</th>
            <th>Availability</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoomNumber</td>
                <td>@item.Capacity</td>
                <td>$@item.PricePerNight</td>
                <td>@(item.IsAvailable ? "Available" : "Not Available")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RoomId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RoomId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RoomId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Room</a>
